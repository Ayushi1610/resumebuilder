<style type="text/css">
    figure input[type=image] {
        -webkit-transform: scale(1);
        transform: scale(1);
        -webkit-transition: .5s ease-in-out;
        transition: .5s ease-in-out;
    }

    figure:hover input[type=image] {
        -webkit-transform: scale(1.3);
        transform: scale(1.3);
    }

    input[type=submit],
    [type=button] {
        background-color: #4bcef3;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        width: 20%;
        margin: 30px;
        float: right;
        font-size: 17px;
        cursor: pointer;
    }

    input[type=submit]:hover {
        background: #2291af;
    }
</style>
<html>

<head>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
</head>

<body background="/images/background.jpg">
    <% if(message){%>
        <script>
            console.log("MESSAGE : ", '<%=message%>')
            Swal.fire(
                '<%=message%>',
                'You clicked the button!',
                'warning'
            )
        </script>
        <%}%>
            <div style="display: flex;flex-direction: column;height: 100%;">
                <div style="height: 10%;">
                    <form action="/landing/exit" method="post" style="float:right;">
                        <input type="hidden" name="user" value="<%=id%>">
                        <input type="submit" class="active anchor" value="Exit" style="width: 70%;margin-right: 20;margin-top: 0;">
                    </form>
                </div>
                <div style="display: flex;justify-content: center;align-items: center;height: 90%;overflow: visible;">

                    <form action="/resume/template1" method="post" style="margin: 0;padding: 0;">
