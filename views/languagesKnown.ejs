<html>

<head>
   <link rel="stylesheet" type="text/css" href="/stylesheets/details.css">
   <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
</head>

<body background="/images/background.jpg">
   <div class="root">
      <div class="subroot1 links">
         <h2 style="color: #4bcef3;letter-spacing: 1;">Resume Details</h2>
         <form action="/landing/navpersonal" method="post" style="margin-bottom:8px;">
            <input type="hidden" name="user" value="<%=id%>">
            <input type="submit"  style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Personal Details">
            </form>
            <form action="/landing/naveducation" method="post" style="margin-bottom:8px;">
               <input type="hidden" name="user" value="<%=id%>">
               <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Education">
            </form>
            <form action="/landing/navexperience" method="post" style="margin-bottom:8px;">
               <input type="hidden" name="user" value="<%=id%>">
               <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Experience">
            </form>
            <form action="/landing/navskillshobbies" method="post" style="margin-bottom:8px;">
               <input type="hidden" name="user" value="<%=id%>">
               <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Skills & Hobbies">
            </form>
            <form action="/landing/navawards" method="post" style="margin-bottom:8px;">
               <input type="hidden" name="user" value="<%=id%>" style="margin-bottom:8px;">
               <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Awards & Achievements">
            </form>
            <form action="/landing/navlanguages" method="post" style="margin-bottom:8px;">
               <input type="hidden" name="user" value="<%=id%>">
               <input type="submit" class="active anchor" style="background-color:#2291af ;padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Languages Known">
            </form>
            <form action="/landing/navprojects" method="post" style="margin-bottom:8px;">
               <input type="hidden" name="user" value="<%=id%>">
               <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Projects">
            </form>
            <form action="/landing/exit" method="post" >
               <input type="hidden" name="user" value="<%=id%>">
               <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Exit">
            </form>
      </div>
      <form action="/resume/insertlanguagedetails" method="post">
        <div class="subroot2">
           <h2 style="color: #4bcef3;margin-bottom: 50px;">Languages Known</h2>
           <div class="section2">
              <input type="hidden" name="user" value="<%=id%>">
              <div id="language_fields" style="display: flex;flex-direction: row;width:100%;flex-wrap: wrap;"></div>
              <div style="display: flex;flex-direction: row;width:40%;">
                 <input type="button" value="Add languages +" onclick="language_fields();" class="active anchor"
                    style="border-radius: 5px;padding: 2px 2px;width:50%;cursor: pointer;border: none;height: 35px;">
              </div>
           </div>
           <input type="submit" value="Save and Next &#x2192;">
        </div>
     </form>
     <script>
        var language = 1;
      function language_fields() {

         language++;
         var objTo = document.getElementById('language_fields')
         var divtest = document.createElement("div");
         divtest.setAttribute("class", "form-group removeclass" + language);
         var rdiv = 'removeclass' + language;
         divtest.innerHTML = '<div style="display: flex;flex-direction: row;width:100%;" ><input  type="text" name="languages" placeholder="Add languages" pattern="[a-zA-Z ]*" required><span style="color: red;margin-top: 10px;">*</span><button  onclick="remove_language_fields(' + language + ');" class="active anchor" style="border-radius: 5px;padding: 8px 8px;width:12%;cursor: pointer;border: none;height: 35px;">-</button> </div>';

         objTo.appendChild(divtest)
      }
      function remove_language_fields(rid) {
         $('.removeclass' + rid).remove();
      }
     </script>
   </div>
</body>
</html>