<html>
<head>
    <link rel="stylesheet" type="text/css" href="/stylesheets/details.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
 </head>
 
 <body background="/images/background.jpg">
    <div class="root">
       <div class="subroot1 links">
          <h2 style="color: #4bcef3;letter-spacing: 1;">Resume Details</h2>
          <form action="/landing/personal" method="post" style="margin-bottom:8px;">
             <input type="hidden" name="user" value="<%=id%>">
             <input type="submit"  style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Personal Details">
             </form>
             <form action="/landing/education" method="post" style="margin-bottom:8px;">
                <input type="hidden" name="user" value="<%=id%>">
                <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Education">
             </form>
             <form action="/landing/experience" method="post" style="margin-bottom:8px;">
                <input type="hidden" name="user" value="<%=id%>">
                <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Experience">
             </form>
             <form action="/landing/skillshobbies" method="post" style="margin-bottom:8px;">
                <input type="hidden" name="user" value="<%=id%>">
                <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Skills & Hobbies">
             </form>
             <form action="/landing/awards" method="post" style="margin-bottom:8px;">
                <input type="hidden" name="user" value="<%=id%>" style="margin-bottom:8px;">
                <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Awards & Achievements">
             </form>
             <form action="/landing/languages" method="post" style="margin-bottom:8px;">
                <input type="hidden" name="user" value="<%=id%>">
                <input type="submit" class="active anchor" style="background-color:#2291af ;padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Languages Known">
             </form>
             <form action="/landing/projects" method="post" style="margin-bottom:8px;">
                <input type="hidden" name="user" value="<%=id%>">
                <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Projects">
             </form>
             <form action="/landing/exit" method="post" >
                <input type="hidden" name="user" value="<%=id%>">
                <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Exit">
             </form>
       </div>
       <div class="subroot2" style="margin-top: 2px;">
        <div style="display: flex;flex-direction: row;width: 100%;height: 70px;margin-bottom: 20px;">
            <h2
                style="color: #4bcef3;margin-top: 20px;margin-left:-110px;letter-spacing: 1;float: left;width: 50%;">
                Languages Known</h2>
            <form action="/landing/skipLanguages" method="post" style="float: right;width: 50%;margin-left: 150px;">
                <input type="hidden" name="user" value="<%=id%>">
                <input type="submit" value="Skip &#x2192;" width="20%" style="margin: 20px;">
            </form>
        </div>
        <form action="/landing/updateLanguages" method="post" style="display:flex;justify-content: center;align-items: center;flex-direction: column;width: 100%;">
            <div style="display: flex;flex-direction: row;width:100%;flex-wrap: wrap;padding-left: 50px;">
                <input type="hidden" name="user" value="<%=id%>">
        <%result.forEach((row)=>{%>
            <div style="display: flex;flex-direction: row;width:20%;margin-right: 10px;">
               <input type="hidden" name="lid" value="<%=row.languagesid%>">
               <input type="text" name="languages" value="<%=row.languages%>" pattern="[a-zA-Z ]*" required><span style="color: red;margin-top: 10px;">*</span>
            </div>
            <%})%>
        </div>
        <input type="submit" value="Update &#x2192;">
        </form>
    </div>
    </div>
 </body>
 </html>
 