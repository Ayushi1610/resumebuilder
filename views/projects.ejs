<html>

<head>
   <link rel="stylesheet" type="text/css" href="/stylesheets/details.css">
   <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
</head>

<body background="/images/background.jpg">
   <div class="root">
      <div class="subroot1 links">
         <h2 style="color: #4bcef3;letter-spacing: 1;">Resume Details</h2>
         <form action="/landing/navpersonal" method="post" style="margin-bottom:8px;">
            <input type="hidden" name="user" value="<%=id%>">
            <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Personal Details">
            </form>
            <form action="/landing/naveducation" method="post" style="margin-bottom:8px;">
               <input type="hidden" name="user" value="<%=id%>">
               <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Education">
            </form>
            <form action="/landing/navexperience" method="post" style="margin-bottom:8px;">
               <input type="hidden" name="user" value="<%=id%>">
               <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Experience">
            </form>
            <form action="/landing/navskillshobbies" method="post" style="margin-bottom:8px;">
               <input type="hidden" name="user" value="<%=id%>">
               <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Skills & Hobbies">
            </form>
            <form action="/landing/navawards" method="post" style="margin-bottom:8px;"> 
               <input type="hidden" name="user" value="<%=id%>">
               <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Awards & Achievements">
            </form>
            <form action="/landing/navlanguages" method="post" style="margin-bottom:8px;">
               <input type="hidden" name="user" value="<%=id%>">
               <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Languages Known">
            </form>
            <form action="/landing/navprojects" method="post" style="margin-bottom:8px;" >
               <input type="hidden" name="user" value="<%=id%>">
               <input type="submit" class="active anchor" style="background-color:#2291af ;padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Projects">
            </form>
            <form action="/landing/exit" method="post" >
               <input type="hidden" name="user" value="<%=id%>">
               <input type="submit" class="active anchor" style="padding: 20px;border-radius: 0px;width: 100%;margin: 0px;" value="Exit">
            </form>
      </div>
      <form action="/resume/insertprojectdetails" method="post">
        <div class="subroot2" >
           <h2 style="color: #4bcef3;">Projects</h2>
           <div class="section2"  id="project_fields">
              <input type="hidden" name="user" value="<%=id%>">
              <div style="display: flex;flex-direction: row;width:100%;">
                 <input type="text" placeholder="Name" name="projectname">
                 <select required name="type">
                    <option>Role </option>
                    <option value="developer">Developer</option>
                    <option value="tester">Tester</option>
                    <option value="analyst">Analyst</option>
                 </select>
                 <input type="text" name="projectlink" placeholder="GitHub link/others">
  
              </div>
              <textarea style="height:50px;border-radius: 5px;width: 97%;margin: 10px;" placeholder="Brief Description"
                 name="projectdesc" maxlength="200"></textarea>
           </div>
           <input type="button" class="repeatproject" onclick="project_fields()" value="&#43; Add More" style="width: 12%;">
           <input type="submit" value="Save and Next &#x2192;">
        </div>
     </div>
  </form>
  <script>
   
      var project = 1;
      var add=1;
            function project_fields() {
               if(add<3){
                project++;
                var objTo = document.getElementById('project_fields')
                var divtest = document.createElement("div");
                divtest.setAttribute("class", "removeclass" + project);
                divtest.setAttribute("style", "width:100%");
                var rdiv = 'removeclass' + project;
                divtest.innerHTML = ' <div style="display:flex;flex-direction:row; width:100%;"><div style="display:flex;flex-direction:column;width:100%"><div style="display: flex;flex-direction: row;"><input type="text" placeholder="Name" name="projectname"><select required name="type"><option>Role </option><option value="developer">Developer</option><option value="tester">Tester</option><option value="analyst">Analyst</option></select><input type="text" name="projectlink" placeholder="GitHub link/others"></div><textarea style="height:50px;border-radius: 5px;width: 97%;margin: 10px;" placeholder="Brief Description" name="projectdesc" maxlength="200"></textarea></div><input type="button" value="-"  onclick="remove_project_fields(' + project + ');" class="active anchor" style="border-radius: 5px;padding: 8px 8px;width:5%;cursor: pointer;border: none;height: 35px;"></div>';

                objTo.appendChild(divtest)
                add++;
            }
         else{
            alert("Not allowed to enter more than 3 projects")
         }}
            function remove_project_fields(hid) {
                $('.removeclass' + hid).remove();
                add--;
            }
  </script>
   </div>
</body>
</html>